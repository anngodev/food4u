<h1>My List</h1>

<ul class="list-group">
	<% @foods.each do |food| %>
		<li class="list-group-item">
			<%= food.name %><%= link_to food, method: :delete do %><i class='fa fa-trash-o'></i><% end %>
		</li>
	<% end %>
</ul>

<%= form_for @food do |f| %>
	<%= f.search_field 'name' %>
	<%= f.hidden_field 'still_tasty_id' %>
	<%= f.hidden_field 'shelf_life' %>
<% end %>

<ul class="list-group" id="suggestions">
	
</ul>

<div class="results"></div>

<%= button_to "Go to Kitchen",  "/kitchen" , :method => :get, class: "btn btn-default"%>






